% Environments

\newenvironment{lecture}[1]{
    \section{\MakeUppercase{#1}}
    \vspace{-0.5em}
    \hrule
    \vspace{1em}
    \begin{list}{}{
        \setlength{\leftmargin}{1.5em}
    }
    \item[]
}{
    \end{list}
}

\newenvironment{answer}{
  \\ \textit{Answer}.
}{\vspace{0.5em}}

\theoremstyle{definition}
\newtheorem{thm}{Theorem}[section]
\theoremstyle{definition}
\newtheorem{crly}[thm]{Corollary}
\theoremstyle{definition}
\newtheorem{lmma}[thm]{Lemma}
\theoremstyle{definition}
\newtheorem{defn}[thm]{Definition}
\theoremstyle{definition}
\newtheorem{excs}[thm]{Exercise}
\theoremstyle{definition}
\newtheorem{prop}[thm]{Proposition}
\theoremstyle{definition}
\newtheorem{exmp}[thm]{Example}
\theoremstyle{definition}
\newtheorem{rmrk}[thm]{Remark}

\definecolor{colorthemesubtle}{RGB}{237,231,246}

\newtcolorbox{tbox}[2][]
{
  colframe = colorthemesubtle,
  colback  = colorthemesubtle,
  coltitle = black,
  fonttitle = \bfseries,
  title    = #2,
  #1,
}

\newtcolorbox{cbox}[1][]
{
  colframe = colorthemesubtle,
  colback  = colorthemesubtle,
  coltitle = black,
  fonttitle = \bfseries,
  #1,
}

\newenvironment{theorem}     {\begin{cbox} \begin{thm}}  {\end{thm} \end{cbox}}
\newenvironment{corollary}   {\begin{cbox} \begin{crly}} {\end{crly} \end{cbox}}
\newenvironment{lemma}       {\begin{cbox} \begin{lmma}} {\end{lmma} \end{cbox}}
\newenvironment{definition}  {\begin{cbox} \begin{defn}} {\end{defn} \end{cbox}}
\newenvironment{exercise}    {\begin{cbox} \begin{excs}} {\end{excs} \end{cbox}}
\newenvironment{proposition} {\begin{cbox} \begin{prop}} {\end{prop} \end{cbox}}
\newenvironment{example}     {\begin{cbox} \begin{exmp}} {\end{exmp} \end{cbox}}
\newenvironment{remark}      {\begin{cbox} \begin{rmrk}} {\end{rmrk} \end{cbox}}

