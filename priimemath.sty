\RequirePackage{amsmath}
\RequirePackage{amsthm}
\RequirePackage[most]{tcolorbox}
\RequirePackage{xcolor}
\tcbuselibrary{theorems}

% Environments

\newenvironment{lecture}[1]{
    \section{\MakeUppercase{#1}}
    \vspace{-0.5em}
    \hrule
    \vspace{1em}
    \begin{list}{}{
        \setlength{\leftmargin}{1.5em}
    }
    \item[]
}{
    \end{list}
}

\newenvironment{answer}{
  \\ \textit{Answer}.
}{\vspace{0.5em}}

\definecolor{colorthemesubtle}{RGB}{237,231,246}

\newtcbtheorem[number within=section]{theorem}{Theorem}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{thrm}
\newtcbtheorem[use counter from=theorem]{corollary}{Corollary}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{crly}
\newtcbtheorem[use counter from=theorem]{lemma}{Lemma}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{lmma}
\newtcbtheorem[use counter from=theorem]{definition}{Definition}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{defn}
\newtcbtheorem[use counter from=theorem]{exercise}{Exercise}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{excs}
\newtcbtheorem[use counter from=theorem]{proposition}{Proposition}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{prop}
\newtcbtheorem[use counter from=theorem]{example}{Example}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{xmpl}
\newtcbtheorem[use counter from=theorem]{remark}{Remark}{colframe=colorthemesubtle,colback=colorthemesubtle,coltitle=black,fonttitle=\bfseries}{rmrk}

